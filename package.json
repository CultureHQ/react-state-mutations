{
  "name": "react-state-mutations",
  "version": "1.1.2",
  "description": "Modify component state without race conditions",
  "main": "dist/mutations.js",
  "types": "dist/mutations.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "eslint --ext .ts --ignore-pattern /dist/* .",
    "prepublishOnly": "rm -rf dist && yarn build --declaration",
    "test": "chq-scripts test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CultureHQ/react-state-mutations.git"
  },
  "author": "Kevin Deisz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CultureHQ/react-state-mutations/issues"
  },
  "homepage": "https://github.com/CultureHQ/react-state-mutations#readme",
  "peerDependencies": {
    "react": "^16"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.3.3",
    "@culturehq/scripts": "^3.0.1",
    "@testing-library/react-hooks": "^2.0.1",
    "@types/jest": "^24.0.18",
    "@types/react": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "react": "^16.9.0",
    "react-test-renderer": "^16.9.0",
    "typescript": "^3.5.3"
  },
  "resolutions": {
    "@babel/core": "^7.5.5",
    "@types/react": "^16.9.2"
  },
  "eslintConfig": {
    "extends": [
      "@culturehq",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": ["error", {
        "allowExpressions": true,
        "allowHigherOrderFunctions": true
      }],
      "@typescript-eslint/no-explicit-any": "off"
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [".js", ".ts"]
        }
      }
    }
  },
  "jest": {
    "testRegex": "\\.test\\.(j|t)sx?$"
  }
}
